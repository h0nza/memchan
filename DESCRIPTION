# -*- tcl -*-
extension memchan {
    author       {Andreas Kupries (a.kupries@westend.com)}
    maintenance  {Andreas Kupries (a.kupries@westend.com)}

    version	   1.5
    copying-policy {BSD-Style, see 'tcl'-license}
    date           {@mDate@}

    comment {
	Implements memory channels, i.e. channels
	storing their contents in memory, not on disk.
    }

    primary-urls {
        ftp://ftp.westend.com/pub/aku/memchan@mFullVersion@.tar.gz
        ftp://ftp.westend.com/pub/aku/memchan@mDosVersion@.zip
        ftp://ftp.westend.com/pub/aku/memchan@mFullVersion@.README
        ftp://ftp.westend.com/pub/aku/mchan@mDosVersion@b.zip
    }

    dependencies {
	tcl 7.6 or 8.0. Does not work with 8.0(ab)*
	Works with tcl 8.1a2, but don't leave channels open before exit.
    }
}
